set width 114
set height 20

set base [file rootname [file tail $argv0]]
set send_human {.1 .3 1 .05 0.5}
set stty_init "cols $width rows $height"

spawn asciinema rec --overwrite ${base}.cast
expect "\$ "
send -h "k6x build --with dashboard --with k6/x/faker --with top\r"
expect "\$ "
sleep 2
send -h "./k6 version\r"
expect "\$ "
sleep 2
send \x04
expect eof
